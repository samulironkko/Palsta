<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:animateLayoutChanges="true"
    android:clickable="false"
    android:focusableInTouchMode="false"
    android:focusable="false"
    app:cardCornerRadius="15dp"
    android:layout_marginBottom="-55dp"
    >



<android.support.constraint.ConstraintLayout

    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:animateLayoutChanges="true"
    android:id="@+id/baseLayout"
    android:minHeight="116dp"


    >
    <ImageView
        android:layout_marginBottom="25dp"
        android:layout_width="130dp"
        android:layout_height="75dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/productImage"
        android:background="@drawable/list_shape"
        android:cropToPadding="false"
        android:scaleType="fitXY"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/productNameText"
        android:text="ab"
        android:textSize="20sp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/productImage"
        android:fontFamily="@font/begum_bold"
        />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/corner_square"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/corner_square"
        android:src="@drawable/icon_chili"
        android:scaleType="centerInside"
        />

    <TextView
        android:id="@+id/priceText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toRightOf="@+id/productImage"
        app:layout_constraintBottom_toBottomOf="@+id/productImage"
        android:text="aaa"
        android:drawableLeft="@drawable/icon_price"
        android:drawablePadding="5dp"
        android:fontFamily="@font/nexademo_light"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/distanceText"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/productImage"
        app:layout_constraintLeft_toRightOf="@+id/priceText"
        android:text="aaa"
        android:drawableLeft="@drawable/icon_location"
        android:drawablePadding="5dp"
        android:fontFamily="@font/nexademo_light"
        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/locationText"
            app:layout_constraintTop_toBottomOf="@+id/productNameText"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:visibility="gone"
            android:text="aaa"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/descriptionText"
            android:text="aa"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/productImage"
            android:visibility="gone"
            android:textSize="24dp"
            />

</android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>